{
  "parser": "babel-eslint",
  "parserOptions": {
    "jsx": true,
    "useJSXTextNode": true
  },
  "extends": [
    "react-app"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "key-spacing"          : 0,
    "jsx-quotes"           : [2, "prefer-single"],
	  "quotes"			   : ["warn", "single"],
    "max-len"              : "off",
    "object-curly-spacing" : [2, "always"],
    "semi": ["warn", "never"],
	  "no-mixed-operators": "off",
	  "eqeqeq": "off",
	  "typescript/no-unused-vars": "off",
	  "no-lone-blocks": "off",
	  "jsx-a11y/alt-text": "off",
	  "jsx-a11y/img-redundant-alt": "off",
	  "jsx-a11y/anchor-is-valid": "off",
	  "jsx-a11y/anchor-has-content": "off",
	  "no-unused-expressions" : "off"
  },
	"overrides": [
		{
			"files": ["*.ts", "*.tsx"],
			"rules": {
				"indent": "off",
				"react/jsx-indext": "off",
				"no-tabs": "off",
				"no-mixed-spaces-and-tabs": "off",
				"no-unused-expressions" : "off",
				"@typescript-eslint/no-unused-vars": "off",
				"react/jsx-no-target-blank": "off",
				"jsx-a11y/alt-text": "off",
				"jsx-a11y/img-redundant-alt": "off",
				"jsx-a11y/anchor-is-valid": "off"
			}
		}
	]
}
